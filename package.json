{
  "name": "uk-gov-tech-standards-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for UK Government Technology Standards",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "setup": "npm run build && node dist/scripts/setup.js",
    "update": "node dist/scripts/update.js",
    "serve": "node dist/index.js",
    "serve:http": "npm run build && node dist/http-server.js",
    "validate": "npm run build && npm test",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "uk-government",
    "technology-standards",
    "gov-uk"
  ],
  "author": "Version 1",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@xenova/transformers": "^2.17.2",
    "cheerio": "1.0.0-rc.12",
    "chromadb": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "puppeteer": "^19.11.1",
    "sqlite3": "^5.1.6",
    "undici": "5.28.4",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
